<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false">
        <shape>
            <corners
                android:radius="2dp" />
            <stroke
                android:width="1px"
                android:color="@color/color_EF4E22"/>
        </shape>
    </item>
    <item  android:state_pressed="true">
        <shape>
            <corners
                android:radius="2dp" />
            <solid
                android:color="@color/color_EF4E22"/>
        </shape>
    </item>
</selector>