<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gdu.api.GduPlayView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="start_preview"
            android:text="开启视频流" />

        <Button
            android:id="@+id/stop_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stop_preview"
            android:text="关闭视频流" />

        <TextView
            android:id="@+id/connect_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ZoomAdd_X"
            android:text="变倍大" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ZoomSub_X"
            android:text="变倍小" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ZoomStop"
            android:text="停止变倍" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/focus_layout"
        android:layout_below="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="FocusAdd_X"
            android:text="变焦大" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="FocusSub_X"
            android:text="变焦小" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="FocusStop"
            android:text="停止变焦" />

        <Button
            android:id="@+id/facusByZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="facusByZone"
            android:text="区域自动聚焦" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/focus_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_getCameraInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="获取Camera信息" />

            <Button
                android:id="@+id/btn_videoSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="视频分辨率" />

            <Button
                android:id="@+id/btn_photoSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Photo分辨率" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_fitch_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:onClick="adjustGimbal"
                    android:text="俯仰30度" />

                <Button
                    android:id="@+id/btn_yaw_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="方位20度" />

                <Button
                    android:id="@+id/btn_zoom_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="变倍5倍" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EV" />

                <Button
                    android:id="@+id/btn_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WB" />

                <Button
                    android:id="@+id/btn_iso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISO" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pitch_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="Up" />

                <Button
                    android:id="@+id/btn_pitch_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="Down" />

                <Button
                    android:id="@+id/btn_yaw_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="Left" />


                <Button
                    android:id="@+id/btn_yaw_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="Right" />

                <Button
                    android:id="@+id/btn_stopHolderControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="adjustGimbal"
                    android:text="STOP" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>