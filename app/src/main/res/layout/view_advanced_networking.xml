<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDF0F1">

    <RelativeLayout
        android:id="@+id/networking_mode_choose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/advanced_networking_mode"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/ov_networking_mode"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_12" />

        <com.gdu.demo.widget.GduSpinner
            android:id="@+id/ov_networking_mode"
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="visible"
            app:optionArray="@array/array_networking_mode" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_bg_edf0f1"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingTop="@dimen/dp_11"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_ap"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/access_point"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_6"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_sta"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/point"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dp_6"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_online"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/online"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_offline"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/offline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_no_match"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/unpaired"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_9"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/icon_current_device"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/current_device"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_alignParentRight="true"
                android:id="@+id/hide_imageview"
                android:visibility="gone"
                android:src="@drawable/icon_black_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <GridView
            android:id="@+id/drone_list_view"
            android:gravity="center_horizontal"
            android:numColumns="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line1_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line2_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line3_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line4_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_20"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/horizon_line1_layout"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/color_4F5C68"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:id="@+id/horizon_line2_layout"
                android:layout_height="@dimen/dp_0_5"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/horizon_line3_layout"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/horizon_line21_layout"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/color_4F5C68"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:id="@+id/horizon_line22_layout"
                android:layout_height="@dimen/dp_0_5"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/horizon_line23_layout"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line21_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_23"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line22_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/color_4F5C68"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_23"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line23_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/black"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_23"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/vertical_line24_layout"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/black"
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_23"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rc_vertical_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_23"
                android:background="@color/black" />
        </LinearLayout>

        <GridView
            android:id="@+id/rc_list_view"
            android:gravity="center_horizontal"
            android:numColumns="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"/>
    </LinearLayout>
</LinearLayout>