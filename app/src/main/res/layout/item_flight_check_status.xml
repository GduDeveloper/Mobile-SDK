<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_60">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/flight_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_535658"
        android:textSize="@dimen/sp_12"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.9"
        app:layout_constraintBottom_toTopOf="@id/flight_status_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="姿态" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/flight_status_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_5B5B5B"
        android:textSize="@dimen/sp_12"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.9"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/flight_status_title"
        app:layout_constraintRight_toRightOf="@id/flight_status_title"
        app:layout_constraintTop_toBottomOf="@id/flight_status_title"
        tools:text="P" />

</androidx.constraintlayout.widget.ConstraintLayout>