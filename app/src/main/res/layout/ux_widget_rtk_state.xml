<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_satellite"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:scaleType="fitCenter"
        android:src="@drawable/top_satellite_electricity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rtk1_satellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="10dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        android:text="@string/Label_N_A"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_satellite"
        app:layout_constraintLeft_toRightOf="@id/iv_satellite"
        app:layout_constraintBottom_toTopOf="@id/tv_rtk1_status" />

    <TextView
        android:id="@+id/tv_rtk1_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="10dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        android:text="@string/Label_N_A"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_rtk1_satellite"
        app:layout_constraintLeft_toRightOf="@id/iv_satellite"
        app:layout_constraintBottom_toBottomOf="@id/iv_satellite" />

</merge>