<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDF0F1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/app_black_back"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_fly"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_limit_height_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/limit_height_switch"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_switch_limit_height"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/selector_hand_control"
                app:layout_constraintBottom_toBottomOf="@id/tv_limit_height_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_limit_height_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_limit_height_title" />

            <!--高度限制-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_height_limit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_limit_height_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_limit_height"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/limit_height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_limit_height_min"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_55"
                    android:maxLines="1"
                    android:text="30m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sb_limit_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:max="1500"
                    android:maxHeight="@dimen/dp_2"
                    android:min="30"
                    android:progress="0"
                    android:progressDrawable="@drawable/icon_planset_seek_bar_progress"
                    android:thumb="@drawable/icon_planset_seek_bar_thumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_limit_height_min"
                    app:layout_constraintRight_toLeftOf="@id/tv_limit_height_max"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_limit_height_max"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:maxLines="1"
                    android:text="500m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_height_limit"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/selector_common_edit_bg"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="INF"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/color_D8D8D8"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_limit_distance_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text="@string/limit_distance_switch"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_height_limit" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_switch_limit_distance"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/selector_hand_control"
                app:layout_constraintBottom_toBottomOf="@id/tv_limit_distance_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_limit_distance_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_limit_distance_title" />


            <!--距离限制-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_distance_limit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_limit_distance_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/limit_distance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_limit_distance_min"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_55"
                    android:maxLines="1"
                    android:text="30m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sb_limit_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:max="8000"
                    android:maxHeight="@dimen/dp_2"
                    android:min="30"
                    android:progress="0"
                    android:progressDrawable="@drawable/icon_planset_seek_bar_progress"
                    android:thumb="@drawable/icon_planset_seek_bar_thumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@id/tv_limit_distance_min"
                    app:layout_constraintRight_toLeftOf="@id/tv_limit_distance_max"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_limit_distance_max"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:maxLines="1"
                    android:text="8000m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_distance_limit"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/selector_common_edit_bg"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="INF"
                    android:textColor="@color/color_9D9D9D"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/color_D8D8D8"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--返航高度-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_back_height"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@id/layout_distance_limit">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_backHeight"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/Label_heightBack"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_minBackHeight"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_65"
                    android:text="20m"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sb_back_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:max="500"
                    android:maxHeight="@dimen/dp_2"
                    android:min="5"
                    android:minHeight="@dimen/dp_3"
                    android:progress="0"
                    android:progressDrawable="@drawable/icon_planset_seek_bar_progress"
                    android:thumb="@drawable/icon_planset_seek_bar_thumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_minBackHeight"
                    app:layout_constraintRight_toLeftOf="@id/tv_maxBackHeight"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_maxBackHeight"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="500m" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_height"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/selector_common_edit_bg"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_EF4E22"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="300" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/color_D8D8D8"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--返航速度-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_back_speed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:layout_constraintTop_toBottomOf="@id/layout_back_height">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/Label_heightSpeed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_minSpeedLabel"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_65"
                    android:text="5m/s"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sb_back_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:max="20"
                    android:maxHeight="@dimen/dp_2"
                    android:min="5"
                    android:minHeight="@dimen/dp_3"
                    android:progress="0"
                    android:progressDrawable="@drawable/icon_planset_seek_bar_progress"
                    android:thumb="@drawable/icon_planset_seek_bar_thumb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_minSpeedLabel"
                    app:layout_constraintRight_toLeftOf="@+id/tv_maxSpeedLabel"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_maxSpeedLabel"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:minWidth="@dimen/dp_50"
                    android:text="15m/s"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_back_speed"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/selector_common_edit_bg"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_EF4E22"
                    android:textSize="@dimen/sp_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/color_D8D8D8"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--失联行为 Layout-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lost_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="@string/out_of_control"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_back_speed" />

            <com.gdu.demo.widget.GduSpinner
                android:id="@+id/ov_out_of_control"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_25"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/tv_lost_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_lost_title"
                app:optionArray="@array/array_out_of_control" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_lost_title" />

            <!--返航行为 Layout-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_return_home_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="@string/return_home_action"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lost_title" />

            <com.gdu.demo.widget.GduSpinner
                android:id="@+id/ov_return_home"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_25"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/tv_return_home_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_return_home_title"
                app:optionArray="@array/array_return_home" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_return_home_title" />

            <!--飞机定位模式切换 Layout-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_gnss_title"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical|start"
                android:text="@string/string_gnss"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_return_home_title"
                app:layout_constraintEnd_toStartOf="@id/ov_gnss"/>

            <com.gdu.demo.widget.GduSpinner
                android:id="@+id/ov_gnss"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_25"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/tv_gnss_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_gnss_title"
                app:optionArray="@array/array_gnss" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_gnss_hint"
                android:text="@string/gnss_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                android:paddingBottom="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@id/tv_gnss_title"/>

            <View
                android:id="@+id/div_gnss"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_gnss_hint" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_gnss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_gnss_title,ov_gnss,tv_gnss_hint,div_gnss"/>

            <!-- fake bds display for dh -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bds_title"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical|start"
                android:text="@string/string_gnss"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:layout_marginEnd="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_gnss"
                app:layout_constraintEnd_toStartOf="@id/tv_bds_value"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bds_value"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical|end"
                android:text="BDS"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@id/tv_bds_title"
                app:layout_constraintTop_toTopOf="@id/tv_bds_title"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/div_bds"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/tv_bds_title" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_bds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
