<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDF0F1"
    android:paddingTop="@dimen/dp_10"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rc_hint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/rc_direction_schematically"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/control_hand_choose_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_common_rectangular"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_america_control"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_27"
                android:background="@drawable/shape_bg_ff4e00"
                android:text="@string/Label_AmericaHand"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_china_control"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_27"
                android:background="@null"
                android:text="@string/Label_ChinaHand"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_japan_control"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_27"
                android:background="@null"
                android:text="@string/Label_JapanHand"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/control_hand_choose_layout"
            android:background="@drawable/shape_common_rectangular"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14">


            <RelativeLayout
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_101"
                android:layout_marginLeft="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/left_hand_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@string/up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/left_hand_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/down"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/left_hand_left"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/turn_left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/left_hand_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_left_hand"
                    android:text="@string/turn_right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_left_hand"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_america_left_hand"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/shape_bg_ff4e00"
                android:gravity="center"
                android:minHeight="@dimen/dp_16"
                android:text="@string/left_hand"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <RelativeLayout
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_101"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/right_hand_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@string/control_forward"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/right_hand_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/control_back"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/right_hand_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@id/iv_right_hand"
                    android:text="@string/turn_left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/right_hand_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/iv_right_hand"
                    android:layout_centerVertical="true"
                    android:text="@string/turn_right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_10" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_right_hand"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_america_right_hand" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/shape_bg_ff4e00"
                android:gravity="center"
                android:minHeight="@dimen/dp_16"
                android:text="@string/right_hand"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>