<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gdu.api.GduPlayView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/base_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_preview"
            android:onClick="start_preview"
            android:text="开启视频流"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/stop_preview"
            android:onClick="stop_preview"
            android:text="关闭视频流"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/connect_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/base_layout"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:text="获取Camera信息"
                android:id="@+id/btn_getCameraInfo"
                android:onClick="onClick"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:text="EV"
                    android:id="@+id/btn_ev"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="WB"
                    android:id="@+id/btn_wb"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="ISO"
                    android:id="@+id/btn_iso"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_pitch_up"
                    android:text="Up"
                    android:onClick="adjustGimbal"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_pitch_down"
                    android:text="Down"
                    android:onClick="adjustGimbal"
                    android:layout_height="wrap_content" />


                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_stopHolderControl"
                    android:text="STOP"
                    android:onClick="adjustGimbal"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="俯仰30度"
                    android:id="@+id/btn_fitch_set"
                    android:onClick="adjustGimbal"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="变倍连拍"
                    android:onClick="adjustGimbal"
                    android:id="@+id/btn_photo_zoom"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="5连拍"
                    android:onClick="adjustGimbal"
                    android:id="@+id/btn_photo_5"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_previewSize"
                android:text="预览流分辨率"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:text="视频分辨率"
                android:id="@+id/btn_videoSize"
                android:onClick="onClick"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:text="Photo分辨率"
                android:onClick="onClick"
                android:id="@+id/btn_photoSize"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>