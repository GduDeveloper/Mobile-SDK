<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:onClick="startConnect"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="连接无人机"
                    android:id="@+id/btn_connRc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/connect_status_textview"
                    android:layout_weight="1"
                    android:textColor="#ff0000"
                    android:text="未连接"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:onClick="preview"
                android:text="预览"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="setting"
                android:text="设置"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="control"
                android:text="控制"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="calibrate"
                android:text="校磁"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="targetRecognize"
                android:text="目标识别"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:onClick="map"
                android:layout_weight="1"
                android:id="@+id/btn_seniorPlanning"
                android:text="航迹飞行"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="gimbal4k"
                android:text="云台_4k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="gimbal10X"
                android:text="云台_10倍"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="gimbal30X"
                android:text="云台_30倍"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="upgrade"
                android:text="升级"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>