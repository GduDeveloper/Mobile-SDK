<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ll_set_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EDF0F1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--下层布局-->
            <LinearLayout
                android:id="@+id/camera_main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:orientation="vertical">

                <!-- 云台校飘 -->
                <RelativeLayout
                    android:id="@+id/rl_check_clound"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/check_clound"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_check_clound"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_solid_ffffff_stroke_f2f2f2"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_26"
                        android:text="@string/state_check_clound_travel"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_11" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_4D999999" />
                </RelativeLayout>

                <include
                    android:id="@+id/include_wheel_speed"
                    layout="@layout/include_wheel_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 云台参数重置 -->
                <RelativeLayout
                    android:id="@+id/rl_reset_gimbal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_4D999999" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/string_gimbal_reset_params_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_reset_gimbal"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_solid_ffffff_stroke_f2f2f2"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_26"
                        android:text="@string/string_gimbal_reset_params_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_11" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_4D999999" />

                <LinearLayout
                    android:id="@+id/test_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_4D999999"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_test_model"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />

                    <!--视频直播-->
                    <RelativeLayout
                        android:id="@+id/video_live_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:text="@string/Label_Live_Tx_VideoLive"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_15"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/delay_arrow" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_4D999999" />
                    </RelativeLayout>

                    <!-- 云台模式 -->
                    <RelativeLayout
                        android:id="@+id/rl_gimbal_mode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/gimbal_mode"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <com.gdu.demo.widget.GduSpinner
                            android:id="@+id/gov_gimbal_mode"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:minHeight="@dimen/dp_26"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_11"
                            android:visibility="visible"
                            app:optionArray="@array/gimbal_mode" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_4D999999" />
                    </RelativeLayout>

                    <!-- 安装角校准-->
                    <com.gdu.demo.widget.menuLayout.CommonMenuLayout
                        android:id="@+id/cml_mount_angel_calibrate"
                        app:cml_label="@string/mount_angel_calibrate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>

                    <com.gdu.demo.widget.menuLayout.CommonMenuLayout
                        android:id="@+id/cml_mount_angel_calibrate_auto"
                        app:cml_label="@string/mount_angel_calibrate_auto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.gdu.demo.widget.PageLoadingView
        android:id="@+id/page_loading_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <com.gdu.demo.widget.live.LiveChooseView
        android:id="@+id/live_choose_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>