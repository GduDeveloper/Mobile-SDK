<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/drone_layout"
        android:layout_width="@dimen/dp_83"
        android:layout_height="@dimen/dp_40"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_networking_no_match"
        android:paddingLeft="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_1"
        android:paddingTop="@dimen/dp_1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drone_imageview"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_6"
            android:src="@drawable/icon_networking_drone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/drone_name_textview"
            android:layout_toRightOf="@+id/drone_imageview"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_3E505C"
            android:textSize="@dimen/sp_9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/type_imageview"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ap" />
    </RelativeLayout>
</RelativeLayout>